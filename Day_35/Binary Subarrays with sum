class Solution {
public:
    int numSubarraysWithSum(vector<int>& nums, int goal) {
        unordered_map<int,int> lf;
        lf[0] = 1;

        int sum = 0;
        int len = 0;

        for(int i = 0; i < nums.size(); i++) {
            sum += nums[i];

            if(lf.find(sum - goal) != lf.end()) {
                len += lf[sum - goal];
            }
            lf[sum]++;
        }
        return len;
    }
};

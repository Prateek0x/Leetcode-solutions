class Solution {
public:
    int squaresum(int n) {
        int s = 0;
        while(n > 0) {
            int b = n % 10;  // last digit
            n /= 10;         // remove last digit
            s += b * b;      // square add in sum
        }
        return s;
    }

    bool isHappy(int n) {
        int slow = n, fast = n;
        
        do {
            slow = squaresum(slow);             
            fast = squaresum(squaresum(fast));  
        } while(slow != fast);
        
        if(fast == 1)
            return true;
        else
            return false;
    }
};

class Solution {
public:
    int countMatches(vector<vector<string>>& items, string ruleKey, string ruleValue) {
        int j = 2, count = 0;
        if(ruleKey == "type")
            j = 0;
        else if(ruleKey == "color")
            j = 1;
        for(int i = 0; i < items.size(); i++){
            if(items[i][j] == ruleValue)
                count++;
        }
        return count;
    }
};
